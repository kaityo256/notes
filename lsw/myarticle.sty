%キャプションのスタイルの定義
\long\def\@makecaption#1#2{{\small
  \advance\leftskip .5cm
  \advance\rightskip .5cm
  \vskip\abovecaptionskip
  \sbox\@tempboxa{#1: #2}%
  \ifdim \wd\@tempboxa >\hsize
     #1: #2\par
  \else
    \global \@minipagefalse
    \hb@xt@\hsize{\hfil\box\@tempboxa\hfil}%
  \fi
\hrulefill
\vskip\belowcaptionskip
}}

